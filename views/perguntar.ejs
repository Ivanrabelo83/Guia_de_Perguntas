<%- include("partials/header.ejs"); %>

<body>
  <div class="container">
    <div class="card" id="formulario-pergunta">
      <div class="card-header">
        <h3>Realizar Pergunta</h3>
      </div>

      <div class="card-body">
        <form method="POST" action="/salvarpergunta">
          <label for="">Titulo</label>
          <input
            type="text"
            placeholder="titulo"
            class="form-control"
            name="titulo"
          />
          <label for="Descrição">Descrição</label>
          <textarea
            class="form-control"
            placeholder="Digite sua pergunta"
            name="descricao"
          ></textarea>
          <br />
          <button class="btn btn-dark">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>

